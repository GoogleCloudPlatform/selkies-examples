resources:
###
# Build vdi-vm infra
###
- name: {{ env["name"] }}
  type: gcp-types/cloudbuild-v1:cloudbuild.projects.builds.create
  metadata:
    dependsOn: {{ properties['dependsOn'] }}
  properties:
    substitutions:
      _EXAMPLES_BRANCH: "{{ properties["examples-branch"] }}"
      _REGION: {{ properties["region"] }}
    tags:
      - {{ env["name"] }}
    timeout: "3600s"
    steps:
      ###
      # Clone the examples repo
      ###
      - name: "gcr.io/cloud-builders/git"
        id: examples-repo
        args:
          - clone
          - https://github.com/GoogleCloudPlatform/solutions-k8s-stateful-workload-operator-examples.git
          - -b
          - ${_EXAMPLES_BRANCH}
        waitFor: ["-"]

      ###
      # Write tfvars to Secret Manager
      ###
      - name: "gcr.io/cloud-builders/gcloud"
        id: vdi-vm-tfvars
        entrypoint: bash
        args:
          - -exc
          - |
            cat - | tee vdi-vm-subnet-regions.auto.tfvars <<EOF
            subnet_regions = [
                "${_REGION}"
            ]
            EOF

            # Create secret if it doesn't exist.
            (gcloud secrets versions access 1 --secret vdi-vm-tfvars-subnet-regions >/dev/null) || \
              gcloud secrets create vdi-vm-tfvars-subnet-regions \
                --replication-policy=automatic \
                --data-file vdi-vm-subnet-regions.auto.tfvars
        waitFor:
          - examples-repo
      
      ###
      # Apply vdi-vm infra changes
      ###
      - name: "gcr.io/cloud-builders/gcloud"
        id: apply-vdi-vm-infra
        dir:  /workspace/solutions-k8s-stateful-workload-operator-examples/vdi-vm/infra
        args:
          - builds
          - submit
        waitFor:
          - vdi-vm-tfvars