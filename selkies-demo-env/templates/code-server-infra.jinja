resources:
###
# Build code-server infra
###
- name: {{ env["name"] }}
  type: gcp-types/cloudbuild-v1:cloudbuild.projects.builds.create
  metadata:
    dependsOn: {{ properties['dependsOn'] }}
  properties:
    substitutions:
      _APP_LAUNCHER_BRANCH: "{{ properties["launcher-branch"] }}"
      _EXAMPLES_BRANCH: "{{ properties["examples-branch"] }}"
    tags:
      - {{ env["name"] }}
    timeout: "3600s"
    steps:
      ###
      # Clone the app launcher repo
      ###
      - name: "gcr.io/cloud-builders/git"
        id: app-launcher-repo
        args:
          - clone
          - https://github.com/GoogleCloudPlatform/solutions-k8s-stateful-workload-operator.git
          - -b
          - ${_APP_LAUNCHER_BRANCH}
        waitFor: ["-"]

      ###
      # Clone the examples repo
      ###
      - name: "gcr.io/cloud-builders/git"
        id: examples-repo
        args:
          - clone
          - https://github.com/GoogleCloudPlatform/solutions-k8s-stateful-workload-operator-examples.git
          - -b
          - ${_EXAMPLES_BRANCH}
        waitFor: ["-"]
      
      ###
      # Fetch broker external IP
      ###
      - name: "gcr.io/cloud-builders/gcloud"
        id: broker-ip
        entrypoint: bash
        args:
          - -exc
          - |
            # Resolve DNS without dig or nslookup utils.
            python -c "import socket; print(socket.gethostbyname('broker.endpoints.${PROJECT_ID}.cloud.goog'))" | \
              tee /workspace/BROKER_IP

      ###
      # Create code.endpoints DNS
      ###
      - name: "gcr.io/cloud-builders/gcloud"
        id: code-server-dns
        dir: /workspace/solutions-k8s-stateful-workload-operator-examples/code-server
        entrypoint: bash
        args:
          - -exc
          - |
            ./scripts/create_cloudep.sh code $(cat /workspace/BROKER_IP)
            ./scripts/create_cloudep.sh code-port-3000 $(cat /workspace/BROKER_IP)
            ./scripts/create_cloudep.sh code-port-8000 $(cat /workspace/BROKER_IP)
            ./scripts/create_cloudep.sh code-port-8080 $(cat /workspace/BROKER_IP)
        waitFor:
          - examples-repo
          - broker-ip

      ###
      # Write tfvars to Secret Manager
      ###
      - name: "gcr.io/cloud-builders/gcloud"
        id: code-server-tfvars
        dir: /workspace/solutions-k8s-stateful-workload-operator-examples/code-server
        entrypoint: bash
        args:
          - -exc
          - |
            cat - | tee code-server-lb-domains.auto.tfvars <<EOF
            additional_ssl_certificate_domains = [
                "code.endpoints.${PROJECT_ID}.cloud.goog",
                "code-port-3000.endpoints.${PROJECT_ID}.cloud.goog.",
                "code-port-8000.endpoints.${PROJECT_ID}.cloud.goog.",
                "code-port-8080.endpoints.${PROJECT_ID}.cloud.goog.",
            ]
            EOF

            # Create secret if it doesn't exist.
            (gcloud secrets versions access 1 --secret broker-tfvars-lb-domains >/dev/null) || \
              gcloud secrets create broker-tfvars-lb-domains \
                --replication-policy=automatic \
                --data-file code-server-lb-domains.auto.tfvars
        waitFor:
          - examples-repo
      
      ###
      # Apply code-server infra changes
      ###
      - name: "gcr.io/cloud-builders/gcloud"
        id: apply-code-server-infra
        dir:  /workspace/solutions-k8s-stateful-workload-operator/setup/infra
        args:
          - builds
          - submit
        waitFor:
          - code-server-tfvars